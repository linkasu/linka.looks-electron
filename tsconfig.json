{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@common": ["./common"],
      "@backend": ["./backend"],
      "@frontend": ["./src"],
    }
  },
  "include": ["src/", "electron/", "common/"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
